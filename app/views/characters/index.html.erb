<h1>Listing characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>ID</th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= character.name %></td>
    <td><%= character.character_id %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Destroy', character, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Import Characters', import_characters_path(current_user) %>
